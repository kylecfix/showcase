
<p id="notice"><%= notice %></p>

<h1><span class=words class="label label-danger">My Beardlishments</span></h1>

<br>

  <div class="row">
    <% @works.each do |work| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h2 class=words ><%= work.name %></h2>
         <h3 class=words ><%= work.description %></h3>
         <h3 class=words ><%= work.url %></h3>
       
         <div class="btn-group">
          <%= link_to 'Show', work, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_work_path(work), class: "btn btn-default" %>
          <%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<span class=words class="label label-primary"><%= link_to 'New Work', new_work_path %></span>
